{
    "name": "typo3-contentblocks/contentblocks-reg-api",
    "type": "typo3-cms-extension",
    "description": "This API provides an easy and reliable way to register content blocks as standalone packages.",
    "keywords": [
        "typo3",
        "content-blocks"
    ],
    "license": [
        "GPL-2.0-or-later"
    ],
    "authors": [
        {
            "name": "TYPO3 Structured Content Initiative"
        }
    ],
    "require": {
        "php": "^7.2 || ~8.0.0",
        "ext-json": "*",
        "typo3-contentblocks/composer-plugin": "*",
        "typo3/cms-core": "^10.4 || ^11.5",
        "typo3/cms-filelist": "^10.4 || ^11.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "helhum/typo3-console": "^7.0",
        "rector/rector": "^0.12.19",
        "roave/security-advisories": "dev-master",
        "typo3-contentblocks/call-to-action-local": "@dev",
        "typo3-contentblocks/counter-local": "@dev",
        "typo3-contentblocks/example-local": "@dev",
        "typo3-contentblocks/fluid-styled-content-example-local": "@dev",
        "typo3-contentblocks/slider-local": "@dev",
        "typo3/cms-about": "^11.5",
        "typo3/cms-adminpanel": "^11.5",
        "typo3/cms-backend": "^11.5",
        "typo3/cms-belog": "^11.5",
        "typo3/cms-beuser": "^11.5",
        "typo3/cms-dashboard": "^11.5",
        "typo3/cms-extbase": "^11.5",
        "typo3/cms-extensionmanager": "^11.5",
        "typo3/cms-felogin": "^11.5",
        "typo3/cms-filemetadata": "^11.5",
        "typo3/cms-fluid": "^11.5",
        "typo3/cms-fluid-styled-content": "^11.5",
        "typo3/cms-form": "^11.5",
        "typo3/cms-frontend": "^11.5",
        "typo3/cms-impexp": "^11.5",
        "typo3/cms-indexed-search": "^11.5",
        "typo3/cms-info": "^11.5",
        "typo3/cms-install": "^11.5",
        "typo3/cms-linkvalidator": "^11.5",
        "typo3/cms-lowlevel": "^11.5",
        "typo3/cms-opendocs": "^11.5",
        "typo3/cms-recordlist": "^11.5",
        "typo3/cms-recycler": "^11.5",
        "typo3/cms-redirects": "^11.5",
        "typo3/cms-reports": "^11.5",
        "typo3/cms-rte-ckeditor": "^11.5",
        "typo3/cms-scheduler": "^11.5",
        "typo3/cms-seo": "^11.5",
        "typo3/cms-setup": "^11.5",
        "typo3/cms-sys-note": "^11.5",
        "typo3/cms-t3editor": "^11.5",
        "typo3/cms-tstemplate": "^11.5",
        "typo3/cms-viewpage": "^11.5",
        "typo3/cms-workspaces": "^11.5",
        "typo3/tailor": "^1.3",
        "typo3/testing-framework": "^6.4"
    },
    "config": {
        "bin-dir": ".typo3/bin",
        "sort-packages": true,
        "vendor-dir": ".typo3/vendor",
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "typo3-contentblocks/composer-plugin": true
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "contentblocks_reg_api",
            "web-dir": ".typo3/public",
            "app-dir": ".typo3"
        }
    },
    "autoload": {
        "psr-4": {
            "Typo3Contentblocks\\ContentblocksRegApi\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Typo3Contentblocks\\ContentblocksRegApi\\Tests\\": "Tests/"
        }
    },
    "repositories": {
        "local": {
            "type": "path",
            "url": "Build/packages/*"
        },
        "cb-composer-plugin": {
            "type": "vcs",
            "url": "https://github.com/TYPO3-Initiatives/content-blocks-composer-plugin.git"
        },
        "cb-examples": {
            "type": "vcs",
            "url": "https://github.com/TYPO3-Initiatives/content-block-examples.git"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "[ -L .typo3/public/typo3conf/ext/contentblocks_reg_api ] || ( mkdir -p .typo3/public/typo3conf/ext/ && ln -snvf ../../../../. .typo3/public/typo3conf/ext/contentblocks_reg_api )"
        ],
        "fix-staged:cgl:php-cs": [
            "php-cs-fixer --config=.php_cs.dist fix -v --using-cache=no `git diff --cached --name-only '*.php'`"
        ],
        "fix:cgl": [
            "@fix:cgl:php-cs"
        ],
        "fix:cgl:php-cs": [
            "php-cs-fixer --config=.php_cs.dist fix --using-cache=no"
        ],
        "install-typo3": [
            "typo3cms install:setup --admin-user-name=admin --admin-password=adminadmin --site-setup-type=site --site-name='Content Block API' --no-interaction",
            "typo3cms install:generatepackagestates"
        ],
        "set-version": [
            "tailor set-version"
        ],
        "test": [
            "@test:cgl",
            "@test:unit"
        ],
        "test-staged": [
            "@test-staged:cgl",
            "@test:unit"
        ],
        "test-staged:cgl": [
            "@test-staged:cgl:php-cs"
        ],
        "test-staged:cgl:php-cs": [
            "if [ `git diff --cached --name-only '*.php' | wc -l` -ne 0 ]; then php-cs-fixer --config=.php_cs.dist fix -v --diff --diff-format=udiff --dry-run `git diff --cached --name-only --relative '*.php'`; else true; fi"
        ],
        "test:cgl": [
            "@test:cgl:php-cs"
        ],
        "test:cgl:php-cs": [
            "php-cs-fixer --config=.php_cs.dist fix -v --dry-run"
        ],
        "test:unit": [
            "phpunit -c Tests/UnitTests.phpunit.xml"
        ],
        "tests-for:ci": [
            "@test"
        ],
        "typo3": [
            "typo3 --ansi"
        ],
        "typo3:flush": [
            "@typo3cms cache:flush"
        ],
        "typo3cms": [
            "typo3cms --ansi"
        ]
    },
    "support": {
        "issues": "https://github.com/TYPO3-Initiatives/content-block-registration-api/issues",
        "source": "https://github.com/TYPO3-Initiatives/content-block-registration-api"
    }
}
